package com.w3schools.utils;

import com.aventstack.extentreports.ExtentReports;
import com.aventstack.extentreports.ExtentTest;
import com.aventstack.extentreports.reporter.ExtentSparkReporter;
import com.aventstack.extentreports.reporter.configuration.Theme;

public class Reports {

	public static ExtentSparkReporter sparkReporter;
	public static ExtentReports extentreports;
	public static ExtentTest extentTest;
	
	public void generateReports() {
		
		sparkReporter = new ExtentSparkReporter(System.getProperty("user.dir")+"/firstLoginAutomationTestReport.html");
		extentreports = new ExtentReports();
		
		sparkReporter.config().setDocumentTitle("Automation Login Test Result");
		sparkReporter.config().setReportName("w3Schools Login Test Result");
		sparkReporter.config().setTheme(Theme.STANDARD);
		sparkReporter.config().setTimeStampFormat("EEEE, MMM dd, yyyy, hh:mm a '('zzz')'");
		
		
		
	}
}
